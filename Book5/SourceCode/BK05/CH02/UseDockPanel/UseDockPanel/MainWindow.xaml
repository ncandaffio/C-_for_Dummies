<Window x:Class="UseDockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UseDockPanel"
        mc:Ignorable="d"
        Title="Dock Panel" Height="200" Width="400">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button DockPanel.Dock="Left" Content="Far Left"/>
            <Button DockPanel.Dock="Left" Content="Near Left"/>
            <Button DockPanel.Dock="Top" Content="Top"/>
            <Button DockPanel.Dock="Bottom" Content="Bottom"/>
            <Button Content="Fill"/>
            <Button Content="Fill More"/>
        </DockPanel>

    </Grid>
</Window>
