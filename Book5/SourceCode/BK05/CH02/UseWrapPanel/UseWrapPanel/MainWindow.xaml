<Window x:Class="UseWrapPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UseWrapPanel"
        mc:Ignorable="d"
        Title="Wrap Panel - Vertical" Height="200" Width="450">
    <Grid>
        <WrapPanel>
            <Button Content="A Button"/>
            <Button Content="Another Button"/>
            <TextBlock Text="This is a text block"/>
            <Button Content="Short"/>
            <Button Content="Really Long Button Label"/>
        </WrapPanel>

    </Grid>
</Window>
